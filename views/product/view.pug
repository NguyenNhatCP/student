extends ../layouts/common

block content
	h1 
		span.mr-3 Products
		a.btn.btn-primary(href="/products/add-product") Create

	.d-flex.align-items-center
		form.ml-auto(action="/users/search",method="GET",class="d-flex")
			input(type="text",name = "q",class="form-control")
			button(class="btn btn-primary ml-2") Search
	table.table
		tr
			th Image
			th Name
			th Description
			th Type-car
			th Number-car
			th Number-seat
			th Gear
			th Type-fuel
			th Price

		each product in products
			tr
				td 
					img(src=product.image,width = '32')
				td= product.name
				td= product.description
				td= product.type_car
				td= product.number_car
				td= product.number_seat
				td= product.gear
				td= product.type_fuel
				td= product.price
				td
					a.btn.btn-light(href='/users/'+ product.id) Delete 