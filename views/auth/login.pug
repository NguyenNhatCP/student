extends ../layouts/common

block content
	if errors
		.alert.alert-danger(role='alert', style='text-align: center')= errors
	.row
		.col-sm-9.col-md-7.col-lg-5.mx-auto
			.card.card-signin.my-5
				.card-body
					h5.card-title.text-center Sign In
					form(action="/auth/login",method="POST")
						form.form-signin
							.form-label-group
								label(for="Sid") Username
								input#Sid.form-control(name='Sid',type='text', required='',value=values ? values.Sid : "", autofocus='')
							.form-label-group
								label(for="Password") Password
								input#Password.form-control(name='Password',type='password', required='')
							.custom-control.custom-checkbox.mb-3
								input#customCheck1.custom-control-input(type='checkbox')
								label.custom-control-label(for='customCheck1') Remember password
							button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in
